#:import WipeTransition kivy.uix.screenmanager.WipeTransition
<VDScreen>:
    btn:btn
    transition: WipeTransition()
    BoxLayout:
        orientation: 'vertical'

        TextInput:
            size_hint: (1, .2)
            text: "ВВЕДИ ЦЕЛЬ ИЛИ ПОДРОБНОСТИ ПРОИСХОДЯЩЕГО ЗДЕСЬ"
            on_touch_down: if self.collide_point(*args[1].pos): self.text = ""

        Button:
            id: btn
            text: "гл"
            on_release: root.manager.current = 'main'

        Button:
            id: btn
            text: "вЫПООЛНЕНИЕ"
            on_release: app.stop()

        Button:
            id: btn
            text: "ПЛАНИРОВЩИК"
            on_release: app.stop()